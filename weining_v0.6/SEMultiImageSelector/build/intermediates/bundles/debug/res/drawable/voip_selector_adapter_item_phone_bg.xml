    <item android:drawable="@color/adapter_item_phone_selector_color" android:state_focused="false" android:state_pressed="true"/>
    <!-- 获得焦点时的图片背景 -->
    <!-- <item android:drawable="@color/white" android:state_focused="true"/> -->
    
    <item android:drawable="@android:color/white"/>
