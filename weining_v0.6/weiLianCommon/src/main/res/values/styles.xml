<?xml version="1.0" encoding="utf-8"?>
<resources>
	<declare-styleable name="PullToRefresh">
        <attr name="ptrRefreshableViewBackground" format="reference|color" />
        <attr name="ptrHeaderBackground" format="reference|color" />
        <attr name="ptrHeaderTextColor" format="reference|color" />
        <attr name="ptrHeaderSubTextColor" format="reference|color" />
        <attr name="ptrMode">
            <flag name="disabled" value="0x0" />
            <flag name="pullFromStart" value="0x1" />
            <flag name="pullFromEnd" value="0x2" />
            <flag name="both" value="0x3" />
            <flag name="manualOnly" value="0x4" />
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
        </attr>
        <attr name="ptrShowIndicator" format="reference|boolean" />
        <attr name="ptrDrawable" format="reference" />
        <attr name="ptrDrawableStart" format="reference" />
        <attr name="ptrDrawableEnd" format="reference" />
        <attr name="ptrOverScroll" format="reference|boolean" />
        <attr name="ptrHeaderTextAppearance" format="reference" />
        <attr name="ptrSubHeaderTextAppearance" format="reference" />
        <attr name="ptrAnimationStyle">
            <flag name="rotate" value="0x0" />
            <flag name="flip" value="0x1" />
        </attr>
        <attr name="ptrScrollingWhileRefreshingEnabled" format="reference|boolean" />
        <attr name="ptrListViewExtrasEnabled" format="reference|boolean" />
        <attr name="ptrRotateDrawableWhilePulling" format="reference|boolean" />
        <attr name="ptrAdapterViewBackground" format="reference|color" />
        <attr name="ptrDrawableTop" format="reference" />
        <attr name="ptrDrawableBottom" format="reference" />
    </declare-styleable>
    
	
	<!-- corresponding to android AbsListView -->
    <declare-styleable name="HAbsListView">
        <attr name="drawSelectorOnTop" format="reference|boolean"></attr>
        <attr name="listSelector" format="reference"></attr>
        <attr name="scrollingCache" format="reference|boolean"></attr>
        <attr name="textFilterEnabled" format="reference|boolean"></attr>
        <attr name="cacheColorHint" format="reference|color"></attr>
        <attr name="fastScrollEnabled" format="reference|boolean"></attr>
        <attr name="smoothScrollbar" format="reference|boolean"></attr>
    </declare-styleable>
	<!-- corresponding to android GridView -->
    <declare-styleable name="HGridView">
        <attr name="horizontalSpacing" format="reference|integer"></attr>
        <attr name="verticalSpacing" format="reference|integer"></attr>
        <attr name="stretchMode" format="reference|integer"></attr>
        <attr name="rowHeight" format="reference|integer"></attr>
        <attr name="numRows" format="reference|integer"></attr>
        <attr name="gravity" format="reference|boolean"></attr>
    </declare-styleable>	
    <!-- corresponding to android ListView -->
    <declare-styleable name="HListView">
        <attr name="entries" format="reference"></attr>
        <attr name="dividerHV" format="reference"></attr>
        <attr name="dividerWidth" format="reference|integer"></attr>
        <attr name="choiceMode" format="reference|integer"></attr>
        <attr name="footerDividersEnabled" format="reference|boolean"></attr>
        <attr name="headerDividersEnabled" format="reference|boolean"></attr>
    </declare-styleable>
</resources>