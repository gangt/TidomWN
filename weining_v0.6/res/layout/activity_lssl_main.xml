<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_mian_activity_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_C72D28"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_zhuye_horizontal_line"
        android:layout_width="234dp"
        android:layout_height="2.5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@color/zhuye_horizontal_line_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/lssl_scan"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home_1"
                android:layout_width="90dp"
                android:layout_height="51dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/home_1_bg" />

            <ImageButton
                android:id="@+id/home_2"
                android:layout_width="90dp"
                android:layout_height="51dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/home_2_bg" />

            <ImageButton
                android:id="@+id/home_3"
                android:layout_width="90dp"
                android:layout_height="51dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/home_3_bg" />

            <ImageButton
                android:id="@+id/home"
                android:layout_width="90dp"
                android:layout_height="51dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/lssl_person"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_viewpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <com.lssl.weight.CircleTextProgressbar
            android:id="@+id/progress_view"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_centerInParent="true"
            android:maxHeight="210dp"
            android:maxWidth="210dp" />

        <LinearLayout
            android:id="@+id/circle_layout"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_full_bg"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/blue_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null" />

            <ImageButton
                android:id="@+id/orange_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/weining_logo_default" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginTop="7dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/iv_btn1"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/lssl_dzl_b" />

        <View
            android:id="@+id/v_vertical_line_1"
            android:layout_width="1dp"
            android:layout_height="33dp"
            android:background="#AB6666" />

        <ImageButton
            android:id="@+id/iv_btn2"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/lssl_zzl_b" />

        <View
            android:id="@+id/v_vertical_line_2"
            android:layout_width="1dp"
            android:layout_height="33dp"
            android:background="#AB6666" />

        <ImageButton
            android:id="@+id/iv_btn3"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/lssl_lzl_b"
            android:visibility="gone" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#A6A6A6"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/iv_btn4"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/lssl_xxzx_b" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bdc3c3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_wealth"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="12/17 周六"
                android:textColor="@color/color_676666" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="27℃"
                android:textColor="@color/color_676666" />

            <ImageView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:src="@drawable/weather_cloud" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_a6a6a6" />

        <LinearLayout
            android:id="@+id/view_skzx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <com.xiangpu.views.AlwaysMarqueeTextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="今日新增场景  1024  个                    今日新增场景  1024  个" />

            <com.xiangpu.views.AlwaysMarqueeTextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="过往场景记录 20460 个                    过往场景记录 20460 个"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="186dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:scaleType="centerInside"
                android:src="@drawable/lssl_skzx" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/color_C72D28"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="7dp">

            <TextView
                android:id="@+id/shidianBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/lssl_hnq"
                android:gravity="center"
                android:text="汇能器"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/jnqBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/lssl_jnq"
                android:gravity="center"
                android:text="聚能器"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/fnqBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/lssl_fnq"
                android:gravity="center"
                android:text="赋能器"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
