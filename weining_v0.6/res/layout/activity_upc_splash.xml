<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/auth_splash_bg">

        <RelativeLayout
            android:layout_width="291dp"
            android:layout_height="310.3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"
            android:background="@drawable/star_bg">

            <TextView
                android:id="@+id/txt_7_star_1"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/txt_7_star_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="26dp"
                android:layout_toRightOf="@id/txt_7_star_1" />

            <TextView
                android:id="@+id/txt_7_star_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/txt_7_star_2"
                android:layout_below="@id/txt_7_star_2"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/txt_7_star_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/txt_7_star_3"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="19dp"
                android:layout_toRightOf="@id/txt_7_star_3" />

            <TextView
                android:id="@+id/txt_7_star_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/txt_7_star_3"
                android:layout_below="@id/txt_7_star_4"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="29dp" />

            <TextView
                android:id="@+id/txt_7_star_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="31dp"
                android:layout_toRightOf="@id/txt_7_star_5" />

            <TextView
                android:id="@+id/txt_7_star_7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/txt_7_star_5"
                android:layout_marginTop="11dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_id_login_xp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_group_logo"
                android:layout_width="284dp"
                android:layout_height="71dp"
                android:src="@drawable/seven_star_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>