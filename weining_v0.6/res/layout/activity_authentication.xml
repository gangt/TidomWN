<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="178dp"
        android:layout_height="173dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="49dp"
        android:background="@drawable/auth_separator"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/auth_gesture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/auth_voice" />

            <ImageView
                android:id="@+id/auth_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerInside"
                android:src="@drawable/auth_password" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/auth_finger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:scaleType="centerInside"
                android:src="@drawable/auth_finger" />

            <ImageView
                android:id="@+id/auth_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/auth_face" />
        </RelativeLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/weilian_hai_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:background="@drawable/weilian_hai_btn_bg"
        android:button="@null"
        android:checked="true"
        android:clickable="false" />

    <CheckBox
        android:id="@+id/weilian_bao_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15.6dp"
        android:background="@drawable/weilian_bao_unclick_bg"
        android:button="@null"
        android:clickable="false" />

    <CheckBox
        android:id="@+id/weilian_wa_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15.6dp"
        android:background="@drawable/weilian_wa_unclick_bg"
        android:button="@null"
        android:clickable="false" />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15.6dp"
        android:background="@drawable/website_shop_bg"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/website_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null" />

        <ImageButton
            android:id="@+id/shop_logout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="182dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/login_logo" />
</LinearLayout>