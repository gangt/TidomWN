<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="82dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/local_check_input_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入账号"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#9A9A9A"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_verifycode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#9A9A9A"
                android:textSize="13sp" />

            <com.xiangpu.views.VerifyCode
                android:id="@+id/verifycode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FEFEFE"
                android:padding="10dp"
                app:codeBackground="@color/white"
                app:codeLength="4"
                app:codeTextSize="20sp"
                app:isContainChar="true"
                app:linNum="0"
                app:pointNum="0" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_next_step"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        android:text="下一步"
        android:textColor="#000"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

    <ImageButton
        android:id="@+id/img_back_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="82dp"
        android:background="@null"
        android:src="@drawable/back_btn_bg" />

</LinearLayout>