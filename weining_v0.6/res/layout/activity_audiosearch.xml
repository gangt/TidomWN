<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="bottom"
    android:background="#f7f7f7"
    android:orientation="vertical" >
 	<!-- 
 	<include layout="@layout/base_title_headerbar"/>
     -->
    <include
	   android:id="@+id/voice_search_input_id"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:visibility="gone"
       layout="@layout/voice_search_input"/>
    
     <include
       android:id="@+id/voice_search_flag_id"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       layout="@layout/voice_search_flag"/>
   
     <include
       android:id="@+id/voice_search_result_id"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:visibility="gone"
       layout="@layout/voice_search_result"/>
</LinearLayout>