<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message_or_email_checkcode_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:text="@string/message_or_email_checkcode_string_format"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="164dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/set_new_password_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_50dp"
                android:ellipsize="end"
                android:inputType="text"
                android:maxEms="15"
                android:maxLines="1"
                android:text="ziyue"
                android:textColor="@color/txt_login_text"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_checkcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入验证码"
                android:textColorHint="#9A9A9A"
                android:textSize="13sp" />

            <Button
                android:id="@+id/bt_send_checkcode"
                android:layout_width="103dp"
                android:layout_height="29dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:background="#E1E1E1"
                android:gravity="center"
                android:text="发送验证码"
                android:textSize="13sp" />
        </LinearLayout>
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:layout_marginLeft="12dp"-->
        <!--android:layout_marginRight="12dp"-->
        <!--android:background="@color/red"/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txt_edit_old_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入新密码"
                android:paddingRight="10dp"
                android:ellipsize="end"
                android:maxEms="15"
                android:password="true"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#9A9A9A"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txt_edit_new1_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请再次确认新密码"
                android:paddingRight="10dp"
                android:ellipsize="end"
                android:maxEms="15"
                android:password="true"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#9A9A9A"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_comfirm"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        android:text="@string/ok"
        android:textColor="#000"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

    <ImageButton
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="82dp"
        android:background="@null"
        android:src="@drawable/back_btn_bg" />
</LinearLayout>